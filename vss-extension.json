{
  "manifestVersion": 1,
  "id": "wiprint",
  "version": "1.0.0",
  "name": "Work Item Print",
  "scopes": ["vso.work"],
  "description": "Print work items from query toolbar or context menu.",
  "publisher": "mrtarantula",
  "public": true,
  "icons": {
    "default": "img/logo.png"
  },
  "targets": [{
    "id": "Microsoft.VisualStudio.Services"
  }],
  "categories": [
    "Plan and track"
  ],
  "tags": [
    "print",
    "work items"
  ],
  "content": {
    "details": {
      "path": "details.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "links": {
    "support": {
      "uri": "https://github.com/mrtarantula/wiprint/issues"
    },
    "repository": {
      "uri": "https://github.com/mrtarantula/wiprint"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/mrtarantula/wiprint"
  },
  "branding": {
    "color": "rgb(255, 255, 255)",
    "theme": "light"
  },
  "files": [{
      "path": "img",
      "addressable": true
    },
    {
      "path": "build",
      "addressable": true
    },
    {
      "path": "index.html",
      "addressable": true
    }
  ],
  "contributions": [{
      "id": "print-work-item",
      "type": "ms.vss-web.action",
      "description": "Print a work item.",
      "targets": [
        "ms.vss-work-web.work-item-context-menu"
      ],
      "properties": {
        "uri": "index.html"
      }
    },
    {
      "id": "print-query-toolbar",
      "type": "ms.vss-web.action",
      "description": "Print a work item.",
      "targets": [
        "ms.vss-work-web.work-item-query-results-toolbar-menu"
      ],
      "properties": {
        "uri": "index.html"
      }
    }
  ]
}